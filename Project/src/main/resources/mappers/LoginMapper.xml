<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
    <mapper namespace="com.project.mappers.listMapper">
    	<!-- 로그인 하는 유저의 정보가 DB에 있는지 조회 -->
    	<select id="selectLoginUser" resultType="com.project.vodto.kjy.Member">
    		select * from member where member_id = #{username} and password = sha1(md5(#{password}))
    	</select>
  	</mapper>